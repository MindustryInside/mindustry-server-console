{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-console": "off",
        "import/no-extraneous-dependencies": "off",
        "class-methods-use-this": "off",
        "indent": "off",
        "linebreak-style": ["error", "windows"],
        "no-use-before-define": "off",
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }]
    }
}
